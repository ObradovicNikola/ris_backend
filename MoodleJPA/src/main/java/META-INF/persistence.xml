<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="MoodleJPA" transaction-type="RESOURCE_LOCAL">
		<class>model.Aktivnost</class>
		<class>model.Course</class>
		<class>model.Materijal</class>
		<class>model.Obavestenje</class>
		<class>model.Ocene</class>
		<class>model.Pohadja</class>
		<class>model.Procitao</class>
		<class>model.Profesor</class>
		<class>model.Role</class>
		<class>model.Student</class>
		<class>model.User</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/ris_projekat"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
